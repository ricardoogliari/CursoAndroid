<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="curso.mpgo.com.cursoandroid.MapsActivity" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/actMapsTxtOffline"
            android:visibility="gone"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="#ff0000"
            android:textColor="#ffffff"
            android:text="Seu dispositivo estÃ¡ desconectado!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgIconList"
            android:visibility="gone"
            android:onClick="mostraLista"
            android:padding="10dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_format_list_bulleted_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
